jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'

      - name: Install dependencies
        run: npm install

      - name: Build React app
        env:
          REACT_APP_USERNAME: ${{ env.REACT_APP_USERNAME }}
          REACT_APP_PASSWORD: ${{ env.REACT_APP_PASSWORD }}
        run: npm run build

      - name: Deploy
        # Add your deployment steps here
